{
    "variables": {
        "iso_url": "https://mirrors.kernel.org/archlinux/iso/{{isotime \"2006.01\"}}.01/archlinux-{{isotime \"2006.01\"}}.01-x86_64.iso",
        "iso_checksum_url": "https://mirrors.kernel.org/archlinux/iso/{{isotime \"2006.01\"}}.01/sha1sums.txt",
        "ssh_timeout": "20m",
        "country": "FR",
        "write_zeros": "true",
        "headless": "false",
        "__ssh_agent_auth": "true",
        "arch_add_pkgs": "'ufw vim'",
        "with_vagrant": "False",
        "ansible_login": "{{ vault `kv/packer` `ansible_login` }}",
        "ansible_password": "{{ vault `kv/packer` `ansible_password` }}",
        "root_password": "{{ vault `kv/packer` `root_password` }}",
        "packer_password": "{{ uuid }}",
        "vm_name": "my-vm",
        "__builder_shutdown_command": "sudo systemctl start poweroff.timer",
        "_comment":  "comment"
    },
    "sensitive-variables": [
        "ansible_login",
        "ansible_password",
        "root_password",
        "packer_password"
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "file:{{ user `iso_checksum_url` }}",
            "guest_os_type": "ArchLinux_64",
            "guest_additions_mode": "disable",
            "http_directory": "srv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "echo  {{ user `packer_password` }}<enter>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/ansible.pub<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/init-vm.service<enter><wait5>",
                "/usr/bin/bash ./enable-ssh.sh {{ user `packer_password` }}<enter>"
            ],
            "vm_name": "{{ user `vm_name` }}",
            "cpus": 2,
            "memory": 4096,
            "disk_size": 20480,
            "hard_drive_interface": "sata",
            "ssh_username": "packer",
            "ssh_password": "{{ user `packer_password` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "acpi_shutdown": "true",
            "headless": "{{ user `headless`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} COUNTRY={{ user `country` }} ADDITIONAL_PKGS={{ user `arch_add_pkgs` }} WITH_VAGRANT={{ user `with_vagrant` }} ANSIBLE_IN_LOGIN={{ user `ansible_login` }} ANSIBLE_IN_PASSWORD={{ user `ansible_password` }} ROOT_IN_PASSWORD={{ user `root_password` }} PACKER_IN_PASSWORD={{ user `packer_password` }} sudo -E -S bash '{{ .Path }}'",
            "expect_disconnect": true,
            "script": "scripts/install-base.sh"
        },
        {
            "only": ["virtualbox-iso"],
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/install-virtualbox.sh"
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} WRITE_ZEROS={{ user `write_zeros` }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/cleanup.sh"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "output/packer_arch_{{ .Provider }}-{{isotime \"2006.01\" }}.01.box",
            "keep_input_artifact": true
        }
    ]

}
