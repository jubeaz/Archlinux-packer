{
    "variables": {
        "cpu": "2",
        "ram": "2048",
        "name": "archlinux",
        "disk_size": "20480",
        "is_uefi": "false",
        "version": "{{ isotime \"2006.01\" }}",

        "vm_name": "jinteki_archlinux-{{ user `version` }}",
        "iso_base_url": "https://mirrors.kernel.org/archlinux/iso/{{user `version`}}.01",
        "iso_url": "{{ user `iso_base_url` }}/archlinux-{{user `version`}}.01-x86_64.iso",
        "iso_checksum_url": "{{ user `iso_base_url` }}/sha1sums.txt",
        "ssh_timeout": "20m",
        "shutdown_command": "sudo systemctl start poweroff.timer",
        
        "country": "FR",
        "write_zeros": "true",
        "headless": "true",
        "arch_add_pkgs": "'ufw vim python python-cryptography'",
        "with_vagrant": "False",
        "_packer_password": "{{ uuid }}",
        "packer_password": "packer",
        "ansible_login": "benmusashi",
        "ansible_password": "test",
        "root_password": "test"
    },
    "sensitive-variables": [
        "ansible_login",
        "ansible_password",
        "root_password",
        "packer_password"
    ],
    "builders": [{
            "type": "qemu",
            "headless": "{{ user `headless`}}",
            "ssh_username": "packer",
            "ssh_password": "{{ user `packer_password` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",

            "vm_name": "{{ user `vm_name` }}",
            "cpus": "{{ user `cpu` }}",
            "disk_size": "{{ user `disk_size` }}",
            "memory": "{{ user `ram` }}",
            "format": "qcow2",
            "accelerator": "kvm",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "qemu_binary": "qemu-system-x86_64",

            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "file:{{ user `iso_checksum_url` }}",

            "http_directory": "srv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/ansible.pub<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/init-vm.service<enter><wait5>",
                "/usr/bin/bash ./enable-ssh.sh {{ user `packer_password` }}<enter>"
            ],
            "shutdown_command": "{{ user `shutdown_command` }}"

        },{
            "type": "virtualbox-iso",
            "headless": "{{ user `headless`}}",
            "ssh_username": "packer",
            "ssh_password": "{{ user `packer_password` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",

            "vm_name": "{{ user `vm_name` }}",
            "cpus": "{{ user `cpu` }}",
            "disk_size": "{{ user `disk_size` }}",
            "memory": "{{ user `ram` }}",
            "hard_drive_interface": "sata",
            
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "file:{{ user `iso_checksum_url` }}",
            "guest_os_type": "ArchLinux_64",
            "guest_additions_mode": "disable",
            "http_directory": "srv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/ansible.pub<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/init-vm.service<enter><wait5>",
                "/usr/bin/bash ./enable-ssh.sh {{ user `packer_password` }}<enter>"
            ],
            "shutdown_command": "{{ user `shutdown_command` }}"
        }
    ],
    "provisioners": [{
            "type": "shell",
            "execute_command": "{{ .Vars }} IS_UEFI={{ user `is_uefi` }} COUNTRY={{ user `country` }} ADDITIONAL_PKGS={{ user `arch_add_pkgs` }} WITH_VAGRANT={{ user `with_vagrant` }} ANSIBLE_IN_LOGIN={{ user `ansible_login` }} ANSIBLE_IN_PASSWORD={{ user `ansible_password` }} ROOT_IN_PASSWORD={{ user `root_password` }} PACKER_IN_PASSWORD={{ user `packer_password` }} sudo -E -S bash '{{ .Path }}'",
            "expect_disconnect": true,
            "script": "scripts/install-base.sh"
        },{
            "only": ["virtualbox-iso"],
            "type": "shell",
            "execute_command": "{{ .Vars }} VBOX_USER={{ user `ansible_login` }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/install-virtualbox.sh"
        },{
            "only": ["qemu"],
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/install-qemu.sh"
        },{
            "type": "shell",
            "execute_command": "{{ .Vars }} WRITE_ZEROS={{ user `write_zeros` }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/cleanup.sh"
        }
    ],
    "post-processors": [{
            "type": "vagrant",
            "output": "output/packer_arch_{{ .Provider }}-{{ user `version` }}.01.box",
            "keep_input_artifact": true
        }
    ]
}
